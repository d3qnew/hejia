<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.coolappz.hejia" version="1.0.0">
  <name>hejia</name>
  <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <preference name="AndroidPersistentFileLocation" value="Compatibility" />
  <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
  <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,root" />
  <plugin name="cordova-plugin-battery-status" version="1.1.3-dev" />
  <plugin name="cordova-plugin-camera" version="2.2.1-dev" />
  <plugin name="cordova-plugin-compat" version="1.0.0" />
  <plugin name="cordova-plugin-contacts" version="2.1.1-dev" />
  <plugin name="cordova-plugin-device" version="1.1.3-dev" />
  <plugin name="cordova-plugin-device-motion" version="1.2.2-dev" />
  <plugin name="cordova-plugin-device-orientation" version="1.0.4-dev" />
  <plugin name="cordova-plugin-dialogs" version="1.2.2-dev" />
  <plugin name="cordova-plugin-file" version="4.2.0" />
  <plugin name="cordova-plugin-file-transfer" version="1.5.2-dev" />
  <plugin name="cordova-plugin-geolocation" version="2.2.1-dev" />
  <plugin name="cordova-plugin-globalization" version="1.0.4-dev" />
  <plugin name="cordova-plugin-media" version="2.3.1-dev" />
  <plugin name="cordova-plugin-media-capture" version="1.3.1-dev" />
  <plugin name="cordova-plugin-network-information" version="1.2.2-dev" />
  <plugin name="cordova-plugin-splashscreen" version="4.0.0" />
  <plugin name="cordova-plugin-vibration" version="2.1.2-dev" />
  <plugin name="cordova-plugin-email" version="1.1.0" />
  <plugin name="cordova-plugin-dialogs" version="1.2.2-dev" />
  <plugin name="cordova-plugin-console" version="1.0.3" />
</widget>